# ==================================================
# Frontend Environment Variables Template
# ==================================================
# Copy this file to .env.local and fill in your values
# Never commit .env.local to version control
# ==================================================

# ==================================================
# IMPORTANT: Security Warning
# ==================================================
# All NEXT_PUBLIC_* variables are exposed to the browser
# NEVER include API keys, secrets, or sensitive data
# All authenticated API calls should go through backend proxy
# ==================================================

# ==================================================
# Backend API Configuration
# ==================================================
# Development (local)
NEXT_PUBLIC_API_URL=http://localhost:3000

# Development (network)
# NEXT_PUBLIC_API_URL=http://192.168.0.50:3000

# Production
# NEXT_PUBLIC_API_URL=https://api.yourdomain.com

# ==================================================
# WebSocket Configuration
# ==================================================
# Development (local)
NEXT_PUBLIC_WS_URL=ws://localhost:3000/ws

# Development (network)
# NEXT_PUBLIC_WS_URL=ws://192.168.0.50:3000/ws

# Production
# NEXT_PUBLIC_WS_URL=wss://api.yourdomain.com/ws

# ==================================================
# n8n Configuration
# ==================================================
# n8n API Base URL (for direct API calls)
# Development
NEXT_PUBLIC_N8N_BASE_URL=http://localhost:5678

# Production
# NEXT_PUBLIC_N8N_BASE_URL=https://n8n.yourdomain.com

# n8n API Key (for authentication)
# Get this from n8n UI: Settings > API
NEXT_PUBLIC_N8N_API_KEY=your-n8n-api-key-here

# n8n UI URL (for external links only)
# Development
NEXT_PUBLIC_N8N_UI_URL=http://localhost:5678

# Production
# NEXT_PUBLIC_N8N_UI_URL=https://n8n.yourdomain.com

# ==================================================
# Application Configuration
# ==================================================
# Application name
NEXT_PUBLIC_APP_NAME=Gonsai2

# Application version (auto-filled by build process)
# NEXT_PUBLIC_APP_VERSION=1.0.0

# ==================================================
# Feature Flags
# ==================================================
# Enable development tools
NEXT_PUBLIC_ENABLE_DEV_TOOLS=true

# Enable debug logging in browser console
NEXT_PUBLIC_DEBUG_MODE=false

# Enable mock data for development
NEXT_PUBLIC_USE_MOCK_DATA=false

# ==================================================
# Analytics and Monitoring (Optional)
# ==================================================
# Google Analytics ID
# NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Sentry DSN for error tracking
# NEXT_PUBLIC_SENTRY_DSN=https://...@sentry.io/...

# ==================================================
# UI Configuration
# ==================================================
# Default language
NEXT_PUBLIC_DEFAULT_LANGUAGE=ko

# Theme (light | dark | system)
NEXT_PUBLIC_DEFAULT_THEME=system

# Items per page for pagination
NEXT_PUBLIC_ITEMS_PER_PAGE=20

# ==================================================
# External Services (Optional)
# ==================================================
# OAuth providers (add as needed)
# NEXT_PUBLIC_GOOGLE_CLIENT_ID=
# NEXT_PUBLIC_GITHUB_CLIENT_ID=

# ==================================================
# Build Configuration
# ==================================================
# Next.js telemetry (set to 1 to disable)
# NEXT_TELEMETRY_DISABLED=1

# ==================================================
# Development Only
# ==================================================
# Port for development server (optional)
# PORT=3002

# Hostname for development server
# HOSTNAME=0.0.0.0
