{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "isolatedModules": false,
    "noEmit": false,
    "paths": {
      "@/*": ["./src/*"],
      "@/test/*": ["./test/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "test/**/*.ts", "test/**/*.tsx"],
  "exclude": ["node_modules", ".next", "dist"]
}
