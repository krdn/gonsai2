# ============================================
# gonsai2 - Environment Variables Template
# ============================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# ============================================
# Application Settings
# ============================================
NODE_ENV=development
PORT=3000
HOST=localhost
WS_PORT=3001
LOG_LEVEL=info

# ============================================
# n8n API Configuration
# ============================================
# n8n API base URL (local Docker container)
N8N_BASE_URL=http://localhost:5678

# n8n API Key (get from n8n UI: Settings > API)
# Required for all n8n API operations
N8N_API_KEY=

# n8n Webhook secret (optional, for signature verification)
N8N_WEBHOOK_SECRET=

# ============================================
# MongoDB Configuration
# ============================================
# MongoDB connection URI
# Local: mongodb://localhost:27017/gonsai2
# Docker network: mongodb://my-mongodb-container:27017/gonsai2
MONGODB_URI=mongodb://localhost:27017/gonsai2

# MongoDB credentials (from docker-mongo-ubuntu/.env)
MONGODB_USER=superadmin
MONGODB_PASSWORD=

# MongoDB options
MONGODB_MAX_POOL_SIZE=10
MONGODB_MIN_POOL_SIZE=2

# ============================================
# Redis Configuration (Optional)
# ============================================
# If you need direct Redis access (n8n uses its own Redis)
REDIS_URL=redis://localhost:6379
REDIS_DB=1

# ============================================
# AI Service Configuration
# ============================================
# Claude API (Anthropic)
ANTHROPIC_API_KEY=

# OpenAI API (optional)
OPENAI_API_KEY=

# ============================================
# Security & Authentication
# ============================================
# JWT secret for authentication (generate with: openssl rand -base64 32)
# CRITICAL: Must be at least 32 characters, keep this secret!
JWT_SECRET=
JWT_EXPIRES_IN=24h

# Session secret
SESSION_SECRET=

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5678

# ============================================
# Email Configuration (Optional)
# ============================================
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=

# ============================================
# Monitoring & Observability
# ============================================
# Sentry DSN (optional)
SENTRY_DSN=

# Application Insights key (optional)
APPINSIGHTS_KEY=

# ============================================
# Feature Flags
# ============================================
ENABLE_ADMIN_API=true
ENABLE_WEBHOOKS=true
ENABLE_BACKGROUND_JOBS=true

# ============================================
# Development Tools
# ============================================
# Enable debug mode
DEBUG=gonsai2:*

# Enable hot reload
HOT_RELOAD=true

# ============================================
# AI-Assisted Development
# ============================================
# Claude Code workspace
CLAUDE_WORKSPACE=/home/gon/projects/gonsai2

# AI session persistence
AI_SESSION_DIR=./ai-sessions
