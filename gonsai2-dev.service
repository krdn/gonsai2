[Unit]
Description=Gonsai2 Development Server
After=network.target docker.service
Wants=docker.service

[Service]
Type=forking
User=gon
Group=gon
WorkingDirectory=/home/gon/projects/n8n/gonsai2
Environment=PATH=/home/gon/.nvm/versions/node/v24.11.1/bin:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin
Environment=NODE_ENV=development
ExecStart=/home/gon/projects/n8n/gonsai2/start-dev.sh
ExecStop=/bin/kill -TERM $MAINPID
Restart=on-failure
RestartSec=10

[Install]
WantedBy=multi-user.target
